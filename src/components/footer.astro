---
// src/components/SiteFooter.astro
const links = {
  behance: "https://behance.net/...",
  instagram: "https://www.instagram.com/splmo_7410/",
  linkedin: "https://www.linkedin.com/in/ethan-hennequin-de-meyer-457343329/",
  dribbble: "https://dribbble.com/spleen-aha"
};
---


<footer class="relative overflow-hidden bg-[url('/src/assets/footer/fondfooter.webp')] bg-cover bg-center text-black px-4 sm:px-6 md:px-12 py-8 sm:py-10 md:py-14">
  <img
    src="/fondfooter.jpg"
    alt=""
    class="pointer-events-none select-none absolute -top-10 right-[6vw] w-[400px] sm:w-[550px] md:w-[720px] max-w-none drop-shadow-[0_12px_28px_rgba(90,0,255,0.25)] hidden md:block"
    width="720" height="720" loading="lazy"
  />


  <div class="relative grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-10 md:gap-[6vw] items-start">
    <div>
      <h2 class="font-[Climate_Crisis] text-[20px] sm:text-[24px] md:text-[28px] leading-[1.05] tracking-[-0.5px] m-0 mb-4 sm:mb-6">
        Ethan Hennequin De Meyer
      </h2>
      <nav class="grid gap-1 sm:gap-1.5">
        <a href="/projects" class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          Projets
        </a>
        <a href="/about" class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          À propos
        </a>
        <a href="/contact" class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          Contact
        </a>
      </nav>
    </div>


    <!-- Colonne droite -->
    <div>
      <h2 class="font-[Climate_Crisis] text-[20px] sm:text-[24px] md:text-[28px] leading-[1.05] tracking-[-0.5px] m-0 mb-4 sm:mb-6">
        Mes réseaux
      </h2>
      <ul class="grid gap-1 sm:gap-2">
        <li>
          <a href={links.behance} class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/be.svg" alt="" width="28" height="28" class="w-5 sm:w-6 md:w-7 h-5 sm:h-6 md:h-7 object-contain" loading="lazy" />
            <span>Behance</span>
          </a>
        </li>
        <li>
          <a href={links.instagram} class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/insta.svg" alt="" width="28" height="28" class="w-5 sm:w-6 md:w-7 h-5 sm:h-6 md:h-7 object-contain" loading="lazy" />
            <span>Instagram</span>
          </a>
        </li>
        <li>
          <a href={links.linkedin} class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/lkin.svg" alt="" width="28" height="28" class="w-5 sm:w-6 md:w-7 h-5 sm:h-6 md:h-7 object-contain" loading="lazy" />
            <span>LinkedIn</span>
          </a>
        </li>
        <li>
          <a href={links.dribbble} class="inline-flex items-center gap-2 sm:gap-3 font-[Climate_Crisis] text-[16px] sm:text-[20px] md:text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/dri.svg" alt="" width="28" height="28" class="w-5 sm:w-6 md:w-7 h-5 sm:h-6 md:h-7 object-contain" loading="lazy" />
            <span>Dribbble</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
