---
// src/components/SiteFooter.astro
const links = {
  behance: "https://behance.net/...",
  instagram: "https://instagram.com/...",
  linkedin: "https://linkedin.com/in/...",
  dribbble: "https://dribbble.com/..."
};
---

<footer class="relative overflow-hidden bg-[url('/src/assets/footer/fondfooter.webp')] bg-cover bg-center text-black px-6 md:px-12 py-14">
  <!-- Fond blob -->
  <img
    src="/fondfooter.jpg"
    alt=""
    class="pointer-events-none select-none absolute -top-10 right-[6vw] w-[720px] max-w-none drop-shadow-[0_12px_28px_rgba(90,0,255,0.25)] hidden md:block"
    width="720" height="720" loading="lazy"
  />

  <div class="relative grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-[6vw] items-start">
    <!-- Colonne gauche -->
    <div>
      <h2 class="font-[Climate_Crisis] text-[28px] leading-[1.05] tracking-[-0.5px] m-0 mb-6">
        Ethan Hennequin De Meyer
      </h2>
      <nav class="grid gap-1.5">
        <a href="/projects" class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          Projets
        </a>
        <a href="/about" class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          À propos
        </a>
        <a href="/contact" class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
          Contact
        </a>
      </nav>
    </div>

    <!-- Colonne droite -->
    <div>
      <h2 class="font-[Climate_Crisis] text-[28px] leading-[1.05] tracking-[-0.5px] m-0 mb-6">
        Mes réseaux
      </h2>
      <ul class="grid gap-2">
        <li>
          <a href={links.behance} class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/be.svg" alt="" width="28" height="28" class="w-7 h-7 object-contain" loading="lazy" />
            <span>Behance</span>
          </a>
        </li>
        <li>
          <a href={links.instagram} class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/insta.svg" alt="" width="28" height="28" class="w-7 h-7 object-contain" loading="lazy" />
            <span>Instagram</span>
          </a>
        </li>
        <li>
          <a href={links.linkedin} class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/lkin.svg" alt="" width="28" height="28" class="w-7 h-7 object-contain" loading="lazy" />
            <span>LinkedIn</span>
          </a>
        </li>
        <li>
          <a href={links.dribbble} class="inline-flex items-center gap-3 font-[Climate_Crisis] text-[24px] leading-[1.15] tracking-[-0.25px] py-2 hover:opacity-90 hover:-translate-y-0.5 transition">
            <img src="/src/assets/footer/dri.svg" alt="" width="28" height="28" class="w-7 h-7 object-contain" loading="lazy" />
            <span>Dribbble</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
