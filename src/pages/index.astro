---
import Layout from "../layouts/Layout.astro";
import PocketBase from "pocketbase";
import CardItem from "../components/CardItem.astro";

// Initialisation PocketBase côté serveur
const pbUrl = import.meta.env.PUBLIC_PB_URL;
if (!pbUrl) {
  throw new Error("PUBLIC_PB_URL manquant. Ajoute PUBLIC_PB_URL dans .env et redémarre le serveur.");
}
const pb = new PocketBase(pbUrl);

// 1) Récupération des cartes (accueil) triées croissant par created
const res = await pb.collection("card_accueil").getList(1, 200, {
  sort: "created", // croissant (ancien -> récent). Utilise "-created" pour décroissant.
});

// 2) Normalisation items + URL d'image
const items = res.items.map((r) => ({
  record: r,
  imgUrl: r.img ? pb.files.getUrl(r, r.img) : ""
}));

// 3) Tri sécurisé (si tu veux assurer côté client)
const sortedItems = [...items].sort(
  (a, b) => new Date(a.record.created).getTime() - new Date(b.record.created).getTime()
);

// 4) Catégories pour l'UI "Mes domaines" (avec traits, inchangées)
const categoriesUI = [
  {
    name: "Photographie",
    traits: ["Inventivité", "Polyvalence", "Créativité", "Mise en valeurs", "Création technique & artistique"],
  },
  {
    name: "Audiovisuel",
    traits: ["Captation d'évènement", "Régis de plateau TV et Streaming", "Création technique & artistique"],
  },
  {
    name: "Évènementiel",
    traits: ["Aide", "Sociabilité", "Logistique", "Enquêtes", "Services", "Accueil", "Gestion des lieux"],
  },
  {
    name: "Communication",
    traits: ["Post", "Visuels", "Flyers, affiches", "Vidéo promotionnelles"],
  },
  {
    name: "Design graphique",
    traits: ["Maquette UX/UI", "Posters", "Visuels", "Cover"],
  },
  {
    name: "Autres",
    traits: ["Dessin", "Peinture", "Musique (MAO)", "Illustration"],
  },
];

// 5) Catégories de filtre dérivées des records PB (uniques + triées A→Z)
const categoriesFromPB = [...new Set(
  items.map(({ record }) => record.categorie).filter((v) => !!v)
)].sort((a, b) => a.localeCompare(b));

// 6) Filtre local via query param ?cat=...
const urlCat = Astro.url.searchParams.get("cat");
const filteredItems = urlCat && urlCat !== "ALL"
  ? sortedItems.filter(({ record }) => record.categorie === urlCat)
  : sortedItems;
---

<Layout>
  <!-- Titre -->
  <div class="flex flex-col items-center justify-center min-h-screen bg-transparent relative">
    <h1
      class="text-center text-[60px] px-12"
      style="font-family: 'Climate Crisis', sans-serif;
             -webkit-text-stroke-width: 57px;
             -webkit-text-stroke-color: transparent;
             -webkit-text-fill-color: white;
             color: white;
             background: linear-gradient(33deg, #0000FF, #FF00C8, #7B00FF);
             -webkit-background-clip: text;
             background-clip: text;
             display: inline-block;"
    >
      Ethan<br />HENNEQUIN DE MEYER
    </h1>

    <!-- Flèche vers Qq proj -->
    <button
      onclick="document.getElementById('qq-proj-section').scrollIntoView({ behavior: 'smooth' })"
      class="absolute bottom-8 animate-bounce cursor-pointer hover:opacity-80 transition-opacity"
      aria-label="Descendre vers les projets"
    >
      <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M24 8V40M24 40L8 24M24 40L40 24" stroke="black" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </button>
  </div>

  <!-- Defilement -->
  <div class="bg-transparent overflow-hidden h-12 w-full relative -translate-y-12">
    <style>
      @keyframes scroll { 0% { transform: translateX(0%);} 100% { transform: translateX(-100%);} }
      .scrolling-text { display:inline-block; white-space:nowrap; animation:scroll 20s linear infinite; font-family:"Cal Sans",sans-serif; font-size:24px; color:black; padding-right:50px; }
      .scrolling-container { display:flex; height:100%; align-items:center; width:fit-content; }
    </style>
    <div class="scrolling-container">
      <div class="scrolling-text">Practice any art, music, singing, dancing… no matter how well or badly, not to get money and fame, but to experience becoming, to find out what's inside you, to make your soul grow... - Sir Ian McKellen</div>
      <div class="scrolling-text">Practice any art, music, singing, dancing… no matter how well or badly, not to get money and fame, but to experience becoming, to find out what's inside you, to make your soul grow... - Sir Ian McKellen</div>
    </div>
  </div>

  <!-- Catégorie (UI riche avec traits) -->
  <div class="min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
      <div class="ml-4 mb-8">
        <h1
          style="font-family: 'Climate Crisis'; -webkit-text-stroke: 2px #CAFB23; paint-order: stroke fill;"
          class="text-[32px] text-black"
        >
          Mes domaines
        </h1>
      </div>

      <div class="space-y-20">
        {
          categoriesUI.map((category, index) => (
            <div key={index} class="group flex items-start gap-12 cursor-pointer h-[45px]">
              <div class="w-64 flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <ul class="space-y-2">
                  {(category.traits ?? []).map((trait, traitIndex) => (
                    <li key={traitIndex} class="flex items-start gap-3">
                      <span class="text-black text-2xl mt-0">•</span>
                      <span style="font-family: 'Cal Sans'" class="text-black text-[24px] leading-tight">{trait}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="flex-grow group/title">
                <h2
                  style="font-family: 'Climate Crisis'; -webkit-text-stroke: 2px #CAFB23; paint-order: stroke fill; color: black;"
                  class="text-[48px] transition-all duration-300 hover:bg-transparent"
                  onmouseover="this.style.color='#CAFB23'; this.style.WebkitTextStroke='1px black';"
                  onmouseout="this.style.color='black'; this.style.WebkitTextStroke='2px #CAFB23';"
                >
                  {category.name}
                </h2>
              </div>

              {index === 0 && (
                <div class="w-80 flex-shrink-0">
                  <p style="font-family: 'Cal Sans'" class="text-[24px] text-black leading-tight">
                    Je suis polyvalent, c'est l'essence même de mon univers créatif.
                    <br /><br />
                    Œuvrer sur de différents supports avec des idées variés et toujours originale.
                  </p>
                </div>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    .domain-title { -webkit-text-stroke: 2px #CAFB23; paint-order: stroke fill; transition: color .25s, -webkit-text-stroke-color .25s; }
    .domain-title:hover { color:#CAFB23; -webkit-text-stroke:1px black; }
  </style>

  <!-- Qq proj -->
  <div class="flex justify-center items-center mt-10 py-16" id="qq-proj-section">
    <div
      class="relative mx-5 w-[calc(100%-40px)] px-16 py-8 pt-5 pb-5 hover:shadow-3xl transition-shadow"
      style="border-radius: 71px; background: radial-gradient(ellipse 100% 60% at center, #E5E5E7 0%, #7B00FF 100%); font-family: 'Climate Crisis', sans-serif;"
    >
      <h2 class="text-4xl font-black text-black text-center">Quelques projets...</h2>
    </div>
  </div>

  <!-- Filtres catégories (strings) -->
  <section class="max-w-7xl mx-auto px-4 mb-8">
  <div class="flex flex-wrap gap-3">
    <a href="?cat=ALL"
       class="px-3 py-1 rounded-full border border-black/20 hover:bg-black hover:text-white transition"
       style="font-family:'Cal Sans'">Toutes</a>

    {categoriesFromPB.map((cat) => (
      <a href={`?cat=${encodeURIComponent(cat)}`}
         class="px-3 py-1 rounded-full border border-black/20 hover:bg-black hover:text-white transition"
         style="font-family:'Cal Sans'">{cat}</a>
    ))}
  </div>
</section>


  <!-- section projets: rendu des cards, alternées -->
  <main class="mx-auto mb-5 max-w-6xl px-4 space-y-12">
  {filteredItems.map(({ record, imgUrl }, i) => (
    <div class="group">
      <div
        class="transition-transform transition-[filter] duration-150 ease-[cubic-bezier(.2,.8,.2,1)]
               group-hover:duration-250 group-hover:ease-[cubic-bezier(.2,.9,.2,1)]
               group-active:scale-[0.995]
               group-hover:scale-[1.09] group-hover:brightness-110"
      >
        <CardItem record={record} imgUrl={imgUrl} align={i % 2 === 0 ? "left" : "right"} />
      </div>
    </div>
  ))}
</main>


</Layout>
