---
import Layout from "../layouts/Layout.astro";

const categories = [
  {
    name: "Photographie",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  },
  {
    name: "Audiovisuel",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  },
  {
    name: "Évènementiel",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  },
  {
    name: "Communication",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  },
  {
    name: "Design graphique",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  },
  {
    name: "Autres",
    traits: [
      "Inventivité",
      "Polyvalence",
      "Créativité",
      "Mise en valeurs",
      "Création technique & artistique"
    ]
  }
];

---

<Layout>

<div class=" flex items-center justify-center mt-60">
    <h1 class="text-center text-[72px] px-12 mb-45" 
            style="font-family: 'Climate Crisis', sans-serif;
                         -webkit-text-stroke-width: 57px;
                         -webkit-text-stroke-color: transparent;
                         -webkit-text-fill-color: white;
                         color: white;
                         background: linear-gradient(33deg, #0000FF, #FF00C8, #7B00FF);
                         -webkit-background-clip: text;
                         background-clip: text;
                         display: inline-block;">
        Ethan
        <br />
        HENNEQUIN DE MEYER
    </h1>
</div>

<div class="bg-transparent overflow-hidden mt-18 mb-20 h-12">
  <style>
    @keyframes scroll {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-200%);
      }
    }

    .scrolling-text {
      display: inline-block;
      white-space: nowrap;
      animation: scroll 25s linear infinite;
      font-family: "Cal Sans", sans-serif;
      font-size: 24px;
      color: black;
      padding-right: 0px;
    }

    .scrolling-container {
      display: flex;
      height: 100%;
      align-items: center;
    }
  </style>

  <div class="scrolling-container">
    <div class="scrolling-text">
      Practice any art, music, singing, dancing… no matter how well or badly, not to get money and fame, but to experience becoming, to find out what's inside you, to make your soul grow... - Sir Ian McKellen
    </div>
    <div class="scrolling-text">
      Practice any art, music, singing, dancing… no matter how well or badly, not to get money and fame, but to experience becoming, to find out what's inside you, to make your soul grow... - Sir Ian McKellen
    </div>
  </div>
</div>


<div class="min-h-screen  p-8">
  <div class="max-w-6xl mx-auto">
    {/* Header */}
    <div class="text-center mb-16">
      <h1 style="font-family: 'Climate Crisis'" class="text-[48px] font-bold text-black">
        Mes domaines
      </h1>
    </div>

    {/* Catégories */}
    <div class="space-y-8">
      {categories.map((category, index) => (
        <div
          key={index}
          class="group flex items-start gap-12 cursor-pointer"
        >
          {/* Traits - caché par défaut */}
          <div class="w-64 flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <ul class="space-y-2">
              {category.traits.map((trait, traitIndex) => (
                <li 
                  key={traitIndex}
                  class="flex items-start gap-3"
                >
                  <span class="text-black text-2xl mt-1">•</span>
                  <span class="text-black text-[24px] font-bold leading-tight">
                    {trait}
                  </span>
                </li>
              ))}
            </ul>
          </div>

          {/* Catégorie */}
          <div class="flex-grow">
            <h3 
              style="font-family: 'Climate Crisis'; -webkit-text-stroke: 1px black;"
              class="text-[48px] font-bold transition-all duration-300 group-hover:text-[#CAFB23] "
            >
              {category.name}
            </h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>



</Layout>


